<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Orbitron', sans-serif;
            background: radial-gradient(circle at top left, #0f0f0f, #1c1c1c);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            overflow: hidden;
        }

        .container {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 25px rgba(0, 255, 255, 0.2);
            width: 90%;
            max-width: 420px;
            text-align: center;
            animation: fadeSlideUp 1.2s ease-out forwards;
            transform: translateY(40px);
            opacity: 0;
        }

        @keyframes fadeSlideUp {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        h1 {
            color: #00fff7;
            margin-bottom: 25px;
            text-shadow: 0 0 10px #00fff7;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #aaa;
            text-align: left;
        }

        input[type="text"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.1);
            color: #00fff7;
            font-size: 16px;
            box-shadow: inset 0 0 5px #00fff7;
            transition: box-shadow 0.3s ease;
        }

        input[type="text"]:focus {
            outline: none;
            box-shadow: 0 0 10px #00fff7;
        }

        button {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            background-color: #00fff7;
            color: #000;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover {
            background-color: #00e5d4;
            transform: scale(1.05);
        }

        p {
            margin-top: 20px;
            color: #fff;
            word-wrap: break-word;
        }

        .copy-btn {
            margin-left: 10px;
            padding: 6px 12px;
            background-color: transparent;
            border: 1px solid #00fff7;
            color: #00fff7;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .copy-btn:hover {
            background-color: #00fff7;
            color: #000;
        }

        #copySuccess {
            display: inline-block;
            margin-left: 10px;
            color: #00ff80;
            font-size: 1.2rem;
            opacity: 0;
            transform: scale(0.8);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        #copySuccess.show {
            opacity: 1;
            transform: scale(1);
        }

        #qr-code {
            margin-top: 20px;
            max-width: 150px;
            box-shadow: 0 0 10px #00fff7;
            border-radius: 12px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        a#shortLink {
            color: #00ffff;
            text-shadow: 0 0 6px #00ffff, 0 0 12px #00e0ff;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        a#shortLink:hover {
            color: #40ffff;
            text-shadow: 0 0 8px #40ffff, 0 0 16px #3be0ff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>URL Shortener </h1>
        <form action="/short" method="post">
            <label for="longUrl">Enter long URL:</label>
            <input type="text" name="longUrl" id="longUrl" required />
            <button type="submit">Shorten</button>
        </form>
        <% if(shortUrl) { %>
            <p class="result">
                Short Url:
                <a href="<%= shortUrl %>" target="_blank" id="shortLink"><%= shortUrl %></a>
                <button class="copy-btn" onclick="copyToClipboard()">Copy</button>
                <span id="copySuccess">âœ”</span>
            </p>
            <canvas id="qr-code"></canvas>
        <% } %>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/qrious@4.0.2/dist/qrious.min.js"></script>
<script>
    function copyToClipboard() {
        const url = document.getElementById('shortLink').href;
        navigator.clipboard.writeText(url).then(() => {
            const successIcon = document.getElementById('copySuccess');
            successIcon.classList.add('show');
            setTimeout(() => {
                successIcon.classList.remove('show');
            }, 2000);
        });
    }

    window.addEventListener('DOMContentLoaded', () => {
        const shortLink = document.getElementById('shortLink');
        const qrCanvas = document.getElementById('qr-code');
        if(shortLink && qrCanvas) {
            const qr = new QRious({
                element: qrCanvas,
                value: shortLink.href,
                size: 150,
                backgroundAlpha: 0,
                foreground: '#00fff7',
                level: 'H'
            });
        }
    });
</script>
</html>